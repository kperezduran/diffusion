<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="view_warehouse_orderpoint_netdiffusion" model="ir.ui.view">
        <field name="name">stock.warehouse.orderpoint.tree.editable.inherit.2</field>
        <field name="model">stock.warehouse.orderpoint</field>
        <field name="inherit_id" ref="purchase_stock.view_warehouse_orderpoint_tree_editable_inherited_mrp"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='supplier_id']" position="before">
                <field name="orderpont_info_ids" widget="many2many_tags" string="Commande"/>
                <field name="partner_ids" widget="many2many_tags" string="Client"/>
                <field name="supplier2_id" string="Fournisseur"/>
            </xpath>
        </field>
    </record>
    <record id="view_stock_warehouse_orderpointinfo_search" model="ir.ui.view">
        <field name="name">stock.warehouse.orderpointinfo.search</field>
        <field name="model">stock.warehouse.orderpointinfo</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="order_id"/>
                <field name="qty"/>

            </search>
        </field>
    </record>
</odoo>
