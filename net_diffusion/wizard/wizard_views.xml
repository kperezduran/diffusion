<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="import_order_wizard_form_xls" model="ir.ui.view">
            <field name="name">Importation Fichier XLSX</field>
            <field name="model">wizard.import_xlsx_order</field>
            <field name="arch" type="xml">
                <form string="Importation Fichier">
                    <group>
                        <field name="file_xls"/>
                        <field name="sale_order_id" invisible="1"/>
                    </group>

                    <footer>
                        <button string="Valider" name="make_invoice_line" type="object" class="btn-primary"/>
                        <button string="Annuler" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="import_order_wizard_form_ods" model="ir.ui.view">
            <field name="name">Importation Fichier ODS</field>
            <field name="model">wizard.import_xlsx_order</field>
            <field name="arch" type="xml">
                <form string="Importation Fichier">
                    <group>
                        <field name="file_ods"/>
                        <field name="sale_order_id" invisible="1"/>
                    </group>

                    <footer>
                        <button string="Valider" name="make_invoice_line" type="object" class="btn-primary"/>
                        <button string="Annuler" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="import_octave" model="ir.ui.view">
            <field name="name">Importation Fichier Octave</field>
            <field name="model">wizard.import_octave</field>
            <field name="arch" type="xml">
                <form string="Importation Fichier">
                    <group>
                        <field name="supplier_id" domain="[('supplier_rank','&gt;', 0)]"/>
                        <field name="editor_id" widget="many2many_tags"/>
                        <field name="file"/>
                    </group>
                    <footer>
                        <button string="Valider" name="make_import" type="object" class="btn-primary"/>
                        <button string="Annuler" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
