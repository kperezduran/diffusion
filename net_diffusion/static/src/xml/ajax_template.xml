                        <label class="form-check-label fw-normal w-100" t-attf-for="tags-#{item.id}">
                            <div class="d-flex align-items-center justify-content-between">
                                <div class="d-flex align-items-center">
                                    <span t-out="item.name"/>
                                </div>
                            </div>
                        </label>
